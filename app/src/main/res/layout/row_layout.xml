<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:map="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:paddingTop="@dimen/row_padding_top"
    android:paddingLeft="@dimen/row_padding_left"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <TextView
        android:id="@+id/tvDate"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        tools:text="@string/tools_date"
        android:textSize="@dimen/travel_row_day"
        android:textColor="@color/textColor"/>
    <TextView
        android:id="@+id/tvStarTime"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        tools:text="@string/tools_start_time"
        android:textSize="@dimen/travel_row_text_size"
        android:textColor="@color/textColor"/>
    <TextView
        android:id="@+id/tvStopTime"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="@dimen/travel_row_text_size"/>

    <com.google.android.gms.maps.MapView
        android:id="@+id/listMap"
        android:layout_width="match_parent"
        android:layout_height="@dimen/map_view_width"
        map:liteMode="true"
        map:mapType="none" />

</LinearLayout>